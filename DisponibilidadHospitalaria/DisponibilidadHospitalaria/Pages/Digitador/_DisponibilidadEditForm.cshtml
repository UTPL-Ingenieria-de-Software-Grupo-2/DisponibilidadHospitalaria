@model DisponibilidadCreateUpdate.RequestModel

@{
    var institucion = (InstitucionDto)ViewData["Institucion"];
    var unidad = (UnidadDto)ViewData["Unidad"];
}

<form method="post" autocomplete="off">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UnidadId" />
    <input type="hidden" asp-for="Fecha" />

    <div class="form-group row">
        <div class="col-2 col-form-label text-md-right text-sm-left">
            Institución:
        </div>
        <div class="col-sm-10">
            <span class="form-control">@institucion.Nombre</span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label text-md-right text-sm-left">
            Unidad:
        </div>
        <div class="col-sm-10">
            <span class="form-control">@unidad.Denominacion</span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label text-md-right text-sm-left">
            Tipo:
        </div>
        <div class="col-sm-10">
            <span class="form-control">@unidad.TipoDeUnidad</span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label text-md-right text-sm-left">
            Capacidad:
        </div>
        <div class="col-sm-10">
            <span class="form-control w-25">@unidad.Capacidad</span>
        </div>
    </div>

    <br />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-md-right text-sm-left">Ocupadas:</label>
        <div class="col-sm-10">
            <input asp-for="Ocupadas" class="form-control w-25">
            <span asp-validation-for="Ocupadas" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger offset-sm-2"></div>

    <div class="form-group row mt-3">
        <div class="col-sm-10 offset-sm-2">
            <div class="d-flex flex-row">
                <input class="btn btn-primary" type="submit" value="Guardar" />
                <a class="btn btn-outline-info ml-3" asp-page="./Index">Regresar</a>
            </div>
        </div>
    </div>
</form>
