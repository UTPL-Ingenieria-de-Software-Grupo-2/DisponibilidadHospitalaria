@page
@model DisponibilidadHospitalaria.Pages.Usuarios.Administrador.IndexModel
@{
    ViewData["Title"] = "Usuarios Autorizados";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<hr />

<div class="text-center">
    <h3 class="display-4">@ViewData["Title"]</h3>
</div>

<div>
    <a class="btn btn-primary btn-sm" title="Agregar nuevo registro" asp-page="./CrearEditarUsuarioAsignado" asp-route-id="-1">Agregar</a>
</div>
<div>
    <table class="table table-sm">
        <thead class="thead-light">
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Institución</th>
                <th>Ciudad</th>
                <th>Provincia</th>
                <th>Activo</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model.Usuarios.OrderBy(x => x.Nombre).ToList())
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Email</td>
                <td>@item.Institucion_Nombre</td>
                <td>@item.Institucion_Ciudad</td>
                <td>@item.Institucion_Provincia</td>
                <td style="text-align: center">
                    @if (item.Activo)
                    {
                        <input type="checkbox" checked disabled>
                    }
                    else
                    {
                        <input type="checkbox" disabled>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-link" asp-page="./CrearEditarUsuarioAsignado" asp-route-id="@item.Id">Editar</a>
                </td>
            </tr>
        }
    </table>
</div>
