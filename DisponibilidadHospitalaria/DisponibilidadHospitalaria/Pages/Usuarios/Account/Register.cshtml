@page
@model DisponibilidadHospitalaria.Pages.Usuarios.Account.RegisterModel
@{
    ViewData["Title"] = "Registrar Usuario";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-page="./Login">Iniciar Sesión</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<hr />

<div class="row justify-content-center">
    <div class="col-sm-12 col-md-8">
        <div class="text-center">
            <h3 class="display-4">@ViewData["Title"]</h3>
        </div>
        <br />
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger offset-sm-4"></div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label text-md-right text-sm-left">Correo electrónico:</label>
                <div class="col-sm-8">
                    <input asp-for="Input.Email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label text-md-right text-sm-left">Contraseña:</label>
                <div class="col-sm-8">
                    <input type="password" asp-for="Input.Password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label text-md-right text-sm-left">Confirmar Contraseña:</label>
                <div class="col-sm-8">
                    <input type="password" asp-for="Input.ConfirmPassword" class="form-control">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="col-sm-8 offset-sm-4">
                <input class="btn btn-primary" type="submit" value="Registrar" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
